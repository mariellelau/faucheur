{% extends '@Faucheur/base.html.twig' %}

{% block body %}
    <h1>Liste des domaines</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine in domaines %}
            <tr>
                <td><a href="{{ path('domaine_show', { 'id': domaine.id }) }}">{{ domaine.id }}</a></td>
                <td>{{ domaine.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('domaine_show', { 'id': domaine.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('domaine_edit', { 'id': domaine.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn waves-effect waves-light" href="{{ path('domaine_new') }}">Ajouter un domaine</a>

{% endblock %}
