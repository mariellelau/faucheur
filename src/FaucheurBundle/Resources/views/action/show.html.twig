{% extends '@Faucheur/base.html.twigg' %}

{% block body %}
    <h1>Action</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom de l'action</th>
                <td>{{ action.nom }}</td>
            </tr>
            <tr>
                <th>Type d'action</th>
                <td>{{ action.type }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{% if action.datedebut %}{{ action.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ action.duree }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ action.lieu }}</td>
            </tr>
            <tr>
                <th>Nom de la campagne</th>
                <td>{{ action.campagne.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('action_index') }}">Liste des actions</a>
        </li>
        <li>
            <a href="{{ path('action_edit', { 'id': action.id }) }}">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
