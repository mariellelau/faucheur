{% extends '@Faucheur/base.html.twig' %}

{% block body %}
    <h1>Role</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ role.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn waves-effect waves-light" href="{{ path('role_index') }}">Back to the list</a>
    <a class="btn waves-effect waves-light" href="{{ path('role_edit', { 'id': role.id }) }}">Edit</a>

    {{ form_start(delete_form) }}
        <input class="btn waves-effect waves-light" type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
