{% extends '@Faucheur/base.html.twig' %}

{% block body %}
    <h1>Liste des mailings</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Id proximite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mailing in mailings %}
            <tr>
                <td><a href="{{ path('mailing_show', { 'id': mailing.id }) }}">{{ mailing.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mailing_show', { 'id': mailing.id }) }}">voir</a>
                        </li>
                        <li>
                            <a href="{{ path('mailing_edit', { 'id': mailing.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mailing_new') }}">Ajouter une nouvelle mailing</a>
        </li>
    </ul>
{% endblock %}
